# Пути к папкам (можно не менять, будут использоваться стандартные)
DATA_DIR=./data           # Папка где лежат документы для обработки
EXPORT_DIR=./export       # Папка куда сохраняются готовые Excel-файлы

# Настройки базы данных
DATABASE_URL=sqlite:///docparser.db  # Файл базы данных (лучше не менять)
SQL_DEBUG_MODE=false                 # Не показывать технические SQL-запросы

# Форматы файлов которые понимает программа
SUPPORTED_FORMATS='[".docx", ".pdf"]'  # Работает с Word и PDF документами

# Ограничения обработки
MAX_FILES_TO_PROCESS=0               # 0 = обрабатывать все файлы (без ограничений)
CONSOLE_OUTPUT_BATCH_SIZE=10         # Показывать по 10 документа в консоли
REWRITE_FILE_ON_CONFLICT=false       # Не перезаписывать файлы автоматически
MAX_DOCUMENTS_PER_EXPORT_FILE=100    # Максимум документов в одном Excel-файле (при большем количестве формируется несколько файлов)

# Список фраз, которые нужно игнорировать при поиске покупателей
EXCLUDE_NAME_LIST='["Моя компания", "Покупатель", "Поставщик"]'
